{
  "name": "madame",
  "type": "module",
  "scripts": {
    "build": "bun build server/index.ts --target=bun --outfile=dist/server.js --minify",
    "dev": "bun run --hot server/index.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:update": "bun db:generate && bun db:migrate",
    "auth:check": "bunx --bun @better-auth/cli@latest info --config ./server/configs/auth.ts --json",
    "auth:generate": "bunx --bun @better-auth/cli@latest generate --config ./server/configs/auth.ts"
  },
  "dependencies": {
    "@pothos/core": "^4.10.0",
    "@pothos/plugin-drizzle": "^0.13.0",
    "@pothos/plugin-relay": "^4.6.2",
    "@pothos/plugin-with-input": "^4.1.4",
    "better-auth": "^1.3.28",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^1.0.0-beta.1-ac4ce44",
    "graphql": "^16.11.0",
    "graphql-yoga": "^5.16.0",
    "hono": "^4.10.1"
  },
  "devDependencies": {
    "@types/bun": "^1.3.0",
    "@types/pg": "^8.15.5",
    "drizzle-kit": "^1.0.0-beta.1-ac4ce44"
  }
}
